{
  "name": "@ana/root",
  "version": "1.0.0",
  "description": "Agents & Arbiters: A multi-agent text adventure game",
  "author": "Guy Royse <guy@guy.dev>",
  "license": "MIT",
  "type": "module",
  "workspaces": [
    "api",
    "web",
    "types"
  ],
  "devDependencies": {
    "@azure/static-web-apps-cli": "^2.0.6",
    "azure-functions-core-tools": "^4.2.2",
    "npm-run-all": "^4.1.5"
  },
  "scripts": {
    "dev": "npm-run-all --sequential build --parallel dev:api dev:web",
    "dev:api": "npm run dev --workspace=@ana/api",
    "dev:web": "npm run dev --workspace=@ana/web",
    "build": "npm-run-all --sequential build:types --parallel build:web build:api",
    "build:types": "npm run build --workspace=@ana/types",
    "build:api": "npm run build --workspace=@ana/api",
    "build:web": "npm run build --workspace=@ana/web"
  }
}
